IF (WIN32)
	FIND_FILE (GDAL_DLL_NAME
		gdal18.dll NAMES gdal19.dll gdal110.dll 
		HINTS ${SEARCH_GIS_LIB_PATH}/bin
		${SEARCH_GIS_LIB_PATH}
		NO_DEFAULT_PATH)

	add_custom_command(TARGET ${CMAKE_PROJECT_NAME} POST_BUILD
		COMMAND ${CMAKE_COMMAND} -E copy_if_different
		"${GDAL_DLL_NAME}"
		"${PROJECT_BINARY_DIR}/${CMAKE_CFG_INTDIR}")
	MESSAGE (STATUS "GDAL DLL: ${GDAL_DLL_NAME}")
	
	FILE (TO_NATIVE_PATH "${SEARCH_GIS_LIB_PATH}/bin/*.dll" ALL_DLL_PATH_ORIGIN)
	FILE (TO_NATIVE_PATH "${PROJECT_BINARY_DIR}/${CMAKE_CFG_INTDIR}" ALL_DLL_PATH_DESTINATION)
	
	add_custom_command(TARGET ${CMAKE_PROJECT_NAME} POST_BUILD
		COMMAND copy  
		${ALL_DLL_PATH_ORIGIN} 
		${ALL_DLL_PATH_DESTINATION})
ENDIF(WIN32)
